<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_A400">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green_500"
                    android:paddingBottom="@dimen/_80sdp"
                    android:paddingTop="@dimen/_80sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/_24sdp"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:text="Mobile Learning"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/_22sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:text="@string/judul"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:text="@string/sub_judul"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_210sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/petunjuk"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_8sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/orange_400"
                                    android:textStyle="bold"
                                    android:text="Petunjuk"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_30sdp"
                            android:background="@color/orange_400"
                            app:cardBackgroundColor="@color/orange_400"
                            android:layout_marginLeft="@dimen/_20sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_12sdp"
                                android:paddingRight="@dimen/_12sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="P"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/kompetensi"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_8sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/red_400"
                                    android:textStyle="bold"
                                    android:text="Kompetensi"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_30sdp"
                            android:background="@color/orange_400"
                            app:cardBackgroundColor="@color/red_400"
                            android:layout_marginLeft="@dimen/_20sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_12sdp"
                                android:paddingRight="@dimen/_12sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="K"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/peta_konsep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_8sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/green_400"
                                    android:textStyle="bold"
                                    android:text="Peta Konsep"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_30sdp"
                            android:background="@color/orange_400"
                            app:cardBackgroundColor="@color/green_400"
                            android:layout_marginLeft="@dimen/_20sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_12sdp"
                                android:paddingRight="@dimen/_12sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="P"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/gel_bunyi"
                            android:layout_width="match_parent"
                            android:minHeight="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_8sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/blue_400"
                                    android:textStyle="bold"
                                    android:text="Materi"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_30sdp"
                            android:background="@color/orange_400"
                            app:cardBackgroundColor="@color/blue_400"
                            android:layout_marginLeft="@dimen/_20sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_12sdp"
                                android:paddingRight="@dimen/_12sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="M"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/latihan_soal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_8sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/blue_900"
                                    android:textStyle="bold"
                                    android:text="Latihan Soal"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_30sdp"
                            android:background="@color/orange_400"
                            app:cardBackgroundColor="@color/blue_900"
                            android:layout_marginLeft="@dimen/_20sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_12sdp"
                                android:paddingRight="@dimen/_12sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="L"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/tentang"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_8sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_50sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/amber_400"
                                    android:textStyle="bold"
                                    android:text="Tentang Penyusun"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:cardElevation="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_30sdp"
                            android:background="@color/orange_400"
                            app:cardBackgroundColor="@color/amber_400"
                            android:layout_marginLeft="@dimen/_20sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_12sdp"
                                android:paddingRight="@dimen/_12sdp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_18sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="T"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="@dimen/_12sdp"
            android:paddingRight="@dimen/_13sdp">
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_exit"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardMaxElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_30sdp"
                android:background="@color/red_400"
                app:cardBackgroundColor="@color/red_400"
                android:layout_marginLeft="@dimen/_20sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shutdown_48px"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>